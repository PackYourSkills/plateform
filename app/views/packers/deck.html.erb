<div class="container">
  <div class="row">
    <div class="col-xs-12, col-sm-3">
      <div class="box box_ratio_1_1" style="background-image:url('<%= cl_image_path @profile_picture_url %>');">
        </div>
        <div class="box">
          <div class="box_link btn-crew-deck text-center">
            <%= link_to "edit your profile", edit_packer_path %>
          </div>
        </div>
        <div class="box">
          <div class="box_link btn-crew-deck text-center">
            <%= link_to "see your profile", packer_path %>
          </div>
      </div>
    </div>

    <div class="col-xs-12, col-sm-9">
      <div class="row">
        <div class="col-xs-12">
          <h2> Welcome on board <%= @packer.user.first_name %>!</h2>
        </div>
        <div class="col-xs-12">
          <div class="progress style-1">
            <span class="text"></span>
              <div class="progress-bar progress-bar-success" role="progressbar" data-animate-width="50%">
                <span class="label object-non-visible" data-animation-effect="fadeInLeftSmall" data-effect-delay="1000">Profile filled - 50%</span>
              </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="panel-group collapse-style-2" id="accordion-2">
            <!-- each on all missions -->
            <% @packer.connections.order(created_at: :desc).each_with_index do |connection, index| %>
              <div class="panel panel-default">
                <div class="panel-heading myclass">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion-2" href="#Mission<%= index %>" >
                      <%= connection.mission.title + ' - ' + connection.status %>
                    </a>
                  </h4>
                </div>
                <div id="Mission<%= index %>"  class="panel-collapse collapse in">
                  <div class="panel-body">
                    <div class="mission_description">
                      <p>Mission description : <%= connection.mission.description %>
                      <%= link_to "see more", mission_path(connection.mission) %></p>
                    </div>

                    <div class="connection_content">
                      <p>Your message : <%= connection.message %>
                      <%= link_to "edit",   edit_mission_connection_path(connection.mission,connection) %> <%= link_to "cancel",  cancel_connection_path(connection.mission,connection) %> <%= link_to "confirm",  confirm_connection_path(connection.mission,connection) %> <%= link_to "delete",  mission_connection_path(connection.mission,connection), method: :delete, data: {confirm: "Are your sure?"} %></p>
                    </div>

                    <div class="crew_description">
                      <p>The crew : <%= connection.mission.crew.name %><%= link_to "see the profile", crew_path(connection.mission.crew) %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <!-- end of each on all missions -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

