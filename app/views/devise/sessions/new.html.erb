<div class="text-center">
  <% if params['role'] == 'crew' %>
    <h2 class="login-title">Log in as a Crew </h2>
  <% else %>
    <h2 class="login-title">Log in as a Packer </h2>
  <% end %>
</div>

<div class="container log">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.input :role, as: :hidden, input_html: { value: params['role'] } %>
    </div>
</div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Log in", class:'btn btn-primary' %>
  </div>
<% end %>

<div class="container text-center link">
  <%= render "devise/shared/links" %>
</div>
