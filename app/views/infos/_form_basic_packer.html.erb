<%= simple_form_for @user, url: infos_update_path(@user) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>

    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :zip_code %>
    <%= f.input :country , as: :string %>

    <%= f.input :birthdate, as: :date, start_year: Date.today.year - 100,
                                end_year: Date.today.year - 18, discard_day: false,
                                order: [:day, :month, :year] %>
    <%= f.button :submit %>
<% end %>
