<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-lg-3 col-lg-offset-1">
      <div class="box box_ratio_1_1" style="background-image:url('<%= cl_image_path @url_logo %>');">
      </div>

      <!-- Box name + social issue -->
      <div class=text-center>
        <h2><%= @crew.name %></h2>
        <p><i class="fa fa-map-marker" aria-hidden="true"></i>
        <%= @crew.city %>, <%= @crew.country %></p>
        <% if (@crew.facebook != nil && @crew.facebook != "") %>
          <p><i class="fa fa-facebook" aria-hidden="true"></i>
                <%= @crew.facebook %></p>
        <% end %>
        <% if (@crew.twitter != nil && @crew.twitter != "") %>
          <p><i class="fa fa-twitter" aria-hidden="true"></i>
                @<%= @crew.twitter %></p>
        <% end %>
        <% if (@crew.skype != nil && @crew.skype != "") %>
          <p><i class="fa fa-skype" aria-hidden="true"></i>
                <%= @crew.skype %></p>
        <% end %>
        <% if (@crew.website != nil && @crew.website != "") %>
          <p><i class="fa fa-laptop" aria-hidden="true"></i>
                <%= @crew.website %></p>
        <% end %>
        <% if (@crew.user.email != nil && @crew.user.email != "") %>
          <p><i class="fa fa-envelope-o" aria-hidden="true"></i>
                <%= @crew.user.email %></p>
        <% end %>
      </div>
      <div class="box height_80px">
        <div class="box_link">
          <% if @editable %>
            <%= link_to 'edit your profile', edit_crew_path %>
          <% end %>
        </div>
      </div>
    </div>


    <div class="col-xs-12 col-sm-8 col-lg-7">
      <div class='row'>
        <!-- Box social_issue & mission 2 column -->
        <div class="col-xs-3">
          <div class="box box120px">
            <% if @crew.social_issue == nil || @crew.social_issue == '' %>
              <div class="box_empty">
                <p>Tell us your social_issue</p>
              </div>
            <% else %>
              <div class="content_box">
                <p><%= @crew.social_issue %></p>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-xs-9">
          <div class="box box120px">
            <% if @crew.mission == nil || @crew.mission == '' %>
              <div class="box_empty">
                <h2>What is your mission </h2>
              </div>
            <% else %>
              <div class="content_box">
                <p><%= @crew.name %> have been created to <%= @crew.mission %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Box story 1 column  -->
        <div class="col-xs-12">
          <div class="box">
            <div class="title_box">
              <h1>Story</h1>
            </div>
            <% if @crew.story == nil || @crew.story == '' %>
              <div class="box_empty">
                <h2>Tell us more about you</h2>
              </div>
            <% else %>
              <div class="content_box">
                <p><%= @crew.story %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Box story 1 column  -->
        <div class="col-xs-2, col-sm-3">
          <table class="box box270px table table-bordered">
              <tr>
                <td>created in<br/><%= @crew.creation_date %></td>
              </tr>
              <tr>
                <td><%= @crew.nb_collaborators %> people<br/>in the team</td>
              </tr>
          </table>
        </div>

        <div class="col-xs-10 col-sm-9">
          <div class="box box270px">
            <div class="title_box">
              <h1>Team</h1>
            </div>
            <% if @crew.team_description == nil || @crew.team_description == '' %>
              <div class="box_empty">
                <h2>Present your team</h2>
              </div>
            <% else %>
              <div class="content_box">
                <p><%= @crew.team_description %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Box Team (nb personne in team + team description) 1 column -->
        <div class="col-xs-12 col-sm-6">
          <div class="box">
            <div class="title_box col-xs-12">
              <h1>Story</h1>
            </div>
            <% if @crew.user.story == nil || @crew.user.story == '' %>
              <div class="box_empty">
                <h2>Tell us your story</h2>
              </div>
            <% else %>
              <div class="content_box">
                <p><%= @crew.user.story %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Box photo team 1 column (not mandatory) -->
        <div class="col-xs-12 col-sm-6">
          <div class="box">
            <div class="title_box col-xs-12">
              <h1>Story</h1>
            </div>
            <% if @crew.user.story == nil || @crew.user.story == '' %>
              <div class="box_empty">
                <h2>Tell us your story</h2>
              </div>
            <% else %>
              <div class="content_box">
                <p><%= @crew.user.story %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


creation_date, discard_day: true
nb_collaborators, required: true
