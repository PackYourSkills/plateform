<div class="container crew_edit">
  <div class="form_inputs">
    <%= simple_form_for (@crew) do |a| %>
      <%= a.hidden_field :crew_id, :value => @crew.id %>

      <p><%= a.input :logo, as: :attachinary %></p>
      <%= a.input :name %>

      <%= a.input :social_issue %>
      <%= a.input :values %>
      <%= a.input :mission %>
      <%= a.input :story %>

      <%= a.input :creation_date, discard_day: true %>
      <%= a.input :nb_collaborators %>
      <%= a.input :team_description %>

      <%= a.input :address %>
      <%= a.input :city %>
      <%= a.input :zip_code %>
      <%= a.input :country , as: :string %>

      <%= a.input :phone %>
      <%= a.input :website %>
      <%= a.input :facebook %>
      <%= a.input :twitter %>

      <%= a.input :crew_photos, as: :attachinary %>

      <%= a.input :credit_count %>

      <div class="container submit">
        <%= a.submit class: "btn btn-primary" %>
        <%= link_to "Return to your profile", crew_path, class:"deviselink" %>
      </div>
    <% end %>
  </div>
</div>


